<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FAFAFA</item>
    </style>

    <style name="TextBodyAccent" parent="TextBody">
        <item name="android:textColor">#FF6F14</item>
    </style>

    <style name="TextBodyAccentNormal" parent="TextBody">
        <item name="android:textColor">#FF6F14</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextTitle" parent="TextBody">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextMenu" parent="TextBody">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#DBFFFFFF</item>
    </style>

    <style name="TextDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#A6A6B2</item>
    </style>

    <style name="TextInput" parent="TextBody">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#1A1A21</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextBadge" parent="TextBody">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#1A1A21</item>
    </style>

    <style name="TextHint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#B3BFCF</item>
    </style>

    <style name="TextBigTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>