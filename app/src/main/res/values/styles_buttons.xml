<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ButtonSmallTransparent" parent="ButtonBase">
        <item name="android:layout_height">28dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:background">@drawable/bg_small_plain_button</item>
    </style>

    <style name="ButtonPrimary" parent="ButtonBase">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="ButtonTransparent" parent="ButtonBase">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/bg_transparent_with_border_button</item>
    </style>

    <style name="ButtonTransparentSecond" parent="ButtonBase">
        <item name="android:textColor">@color/color_hint</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/bg_small_plain_button</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ButtonBody" parent="ButtonBase">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_body_item_review</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>